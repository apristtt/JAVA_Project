<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surrey"
        android:id="@+id/btnSurrey"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick_Surrey"
        android:layout_marginTop="25dp" />

    <fragment
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_below="@+id/btnSurrey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/btnSurrey" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:id="@+id/btnCity"
        android:onClick="onClick_City"
        android:layout_alignBottom="@+id/map" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UTK"
        android:id="@+id/btnUTK"
        android:onClick="onClick_UTK"
        android:layout_below="@+id/btnMyLocation"
        android:layout_alignEnd="@+id/map"
        android:layout_marginTop="59dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Location"
        android:id="@+id/btnMyLocation"
        android:layout_alignTop="@+id/map"
        android:layout_alignParentStart="true"
        android:onClick="onClick_myLocation" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerPickLocation"
            android:spinnerMode="dropdown" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:id="@+id/btnSearch"
            android:layout_alignBottom="@+id/spinnerPickLocation"
            android:layout_toEndOf="@+id/btnMyLocation" />
    </LinearLayout>

</RelativeLayout>
